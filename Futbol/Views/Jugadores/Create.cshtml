@model Futbol.Models.Jugadores

@{
    ViewBag.Title = "Crear un nuevo jugador";
}

<div class="page-header">
	<h2>Crear</h2>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Jugadores</legend>
        <div class="control-group">
            @Html.LabelFor(model => model.NOMBRE)
			<div class="controls">
				@Html.EditorFor(model => model.NOMBRE)
				@Html.ValidationMessageFor(model => model.NOMBRE)
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.APELLIDOS)
			<div class="controls">
				@Html.EditorFor(model => model.APELLIDOS)
				@Html.ValidationMessageFor(model => model.APELLIDOS)
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.F_NACIMIENTO)
			<div class="controls">
				@Html.EditorFor(model => model.F_NACIMIENTO)
				@Html.ValidationMessageFor(model => model.F_NACIMIENTO)
			</div>
		</div>

        <div class="control-group">
            @Html.LabelFor(model => model.POSICION)
			<div class="controls">
				@Html.EditorFor(model => model.POSICION)
				@Html.ValidationMessageFor(model => model.POSICION)
			</div>
		</div>

			<div class="control-group">
				@Html.LabelFor(m => m.EQUIPO)
				<div class="controls">
                    @Html.DropDownListFor(m => m.EQUIPO, ViewBag.Equipos as SelectList, new { id = "SelectEquipo" })
				</div>
			</div>

        <div class="control-group">
            @Html.LabelFor(model => model.IMAGEN)
			<div class="controls">
				@Html.EditorFor(model => model.IMAGEN)
				@Html.ValidationMessageFor(model => model.IMAGEN)
			</div>
		</div>

		<div class="form-actions">
			<input type="submit" class="btn btn-success" value="Guardar" />
		</div>
    </fieldset>

    
}

<div>
	@Html.ActionLink("Volver al listado", "Index")
</div>

